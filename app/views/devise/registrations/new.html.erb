<div class="row">
	<div class="col-sm-12">
		<h2>Sign up</h2>
	</div>
</div>
<div class="row">
	<div class="col-sm-12 user-yield">
		<%= form_for(resource, :html => { :multipart => true }, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
	    <% if !resource.errors.empty? %>
	        <div class="row errorBox">
	            <div class="col-sm-offset-8 col-sm-4">
	                <h4>Error report</h4>
	                <% resource.errors.each do |attribute, error| %>
	                    <div class="row">
	                        <div class="col-sm-12">
	                            <%= attribute %>
	                            <%= error %>
	                        </div>
	                    </div>
	                <% end %>
	            </div>
	        </div>
	    <% end %>
		<div class="row">
			<div class="col-sm-6">
				<%= f.label :email %>
			</div>
			<div class="col-sm-6">
				<%= f.email_field :email, :autofocus => true, :placeholder => "Email Address" %>
			</div>
		</div>
		<div class="row">
			<div class="col-sm-6">
				<%= f.label :avatar %>
			</div>
			<div class="col-sm-6">
				<%= f.file_field :avatar %>
			</div>
		</div>
		<div class="row">
			<div class="col-sm-6">
				<%= f.label :password %>
	  		</div>
			<div class="col-sm-6">
		  		<%= f.password_field :password, :placeholder => "Password" %>
	  		</div>
		</div>
		<div class="row">
			<div class="col-sm-6">
				<%= f.label :password_confirmation %>
	  		</div>
			<div class="col-sm-6">
		  		<%= f.password_field :password_confirmation, :placeholder => "Password Confirmation" %>
	  		</div>
		</div>
		<div class="row">
			<div class="col-sm-6">
				<%= f.label "alias/username" %>
	  		</div>
			<div class="col-sm-6">
		  		<%= f.text_field :alias, :placeholder => "Alias" %>
	  		</div>
		</div>
		<div class="row">
			<div class="col-sm-12">
	  			<%= f.submit "Sign up", :class => "flat-rounded-button" %>
	  		</div>
		</div>
		<% end %>
	</div>
</div>
<div class="row">
	<div class="col-sm-12">
		<%= render "devise/shared/links" %>
	</div>
</div>
