<div class="row">
	<div class="col-md-12">
		<h2>Sign in</h2>
	</div>
</div>
<div class="row">
	<div class="col-md-12">
		<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
		<div class="row">
			<div class="col-md-6">
			  	<%= f.label :email %>
		  	</div>
			<div class="col-md-6">
				<%= f.label :password %>
		  	</div>
  		</div>
		<div class="row">
			<div class="col-md-6">
		  		<%= f.email_field :email, :autofocus => true %>
		  	</div>
			<div class="col-md-6">
		  		<%= f.password_field :password %>
		  	</div>
  		</div>
		<div class="row">
			<% if devise_mapping.rememberable? %>
				<div class="col-md-12">
					<%= f.check_box :remember_me %> <%= f.label :remember_me %>
				</div>
			<% end %>
		</div>
		<div class="row">
			<div class="col-md-12">
				<%= f.submit "Sign in" %>
			</div>
		</div>
		<% end %>
	</div>
</div>
<div class="row">
	<div class="col-md-12">
		<%= render "devise/shared/links" %>
	</div>
</div>
