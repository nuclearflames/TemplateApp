<%= form_for @forum do |f| %>
    <% if !@forum.errors.empty? %>
        <div class="row">
            <div class="col-md-12 errorBox">
                <h4>Error report</h4>
                <% @forum.errors.each do |attribute, error| %>
                    <div class="row">
                        <div class="col-md-12">
                            <%= attribute %>
                            <%= error %>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
    <% end %>
    <div class="row">
        <div class="col-md-6 title">
            <%= f.label :title %>
        </div>
        <div class="col-md-6 description">
            <%= f.label :description %>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 input">
            <%= f.text_field :title, :placeholder => "title" %>
        </div>
        <div class="col-md-6 description">
            <%= f.text_area :description, :placeholder => "description" %>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <%= f.submit :class => "flat-rounded-button" %>
        </div>
    </div>
<% end %>