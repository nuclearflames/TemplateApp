<div class="row">
    <div class="col-sm-12">
        <h1>All of our forums</h1>
        <p>Here you can post and create new content to our forums</p>
    </div>
</div>
<div class="row header">
    <div class="col-sm-6">
        <h3>About Fourm</h3>
    </div>
    <div class="col-sm-3">
        <h3>Topic Count</h3>
    </div>
    <div class="col-sm-3">
        <h3>Owner</h3>
    </div>
</div>
<% @forums.each do |f|%>
    <div class="row">
        <div class="col-sm-6">
            <p><span class="visible-xs">Title:</span> <%= link_to f.title, forum_path(f.id) %></p>
            <p><span class="visible-xs">Description:</span> <%= f.description %></p>
        </div>
        <div class="col-sm-3">
            <p><span class="visible-xs">Topic count:</span> <%= f.topics.count %></p>
        </div>
        <div class="col-sm-3">
            <p><span class="visible-xs">Owned by:</span> <%= get_user(f.user_id).alias %></p>
            <% if current_user.id === f.user_id %>
                <%= render "indexEdit", :forum => f %>
            <% end %>
        </div>
    </div>
    <hr />
<% end %>
<%= no_results(@forums, "forums").html_safe %>
<div class="row footer">
    <div class="col-sm-12">
        <%= paginate @forums %>
        <p><%= link_to "Create new forum", new_forum_path %></p>
    </div>
</div>