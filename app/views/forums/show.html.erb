<div class="row">
    <div class="span12">
        <%= form_for @forum do |f| %>
            <div class="row">
                <div class="span12">
                    <h1><%= @forum.title %></h1>
                </div>
            </div>
            <div class="row">
                <div class="span12">
                    <h4><%= @forum.description %></h4>
                </div>
            </div>
        <% end %>
    </div>
</div>
<div class="row">
    <div class="span12">
        <p>Topics:</p>
    </div>
</div>
<div class="row">
    <div class="span6">
        <h3>Title:</h3>
    </div>
    <div class="span3">
        <h3>Owner:</h3>
    </div>
    <div class="span3">
        <h3>Posts:</h3>
    </div>
</div>
<% @forum.topics.each do |f| %>
    <div class="row">
        <div class="span12">
            <div class="row">
                <div class="span6">
                    <p><%= link_to f.title, topics_path(f.forum_id) %></p>
                    <p><%= f.description %></p>
                </div>
                <div class="span3">
                    <p><%= get_user(f.user_id).alias %></p>
                </div>
                <div class="span3">
                    <p>Post count</p>
                </div>
            </div>
        </div>
    </div>
<% end %>
<div class="row">
    <div class="span12">
        <%= link_to "Create new topic", new_topic_path(params[:id]) %>
    </div>
</div>