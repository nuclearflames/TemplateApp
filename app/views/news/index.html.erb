<div class="row">
    <div class="col-sm-12">
        <h1>Latest News</h1>
        <p>Here you can create the news (and view it)</p>
    </div>
</div>
<div class="row" id="news-wrapper">
    <% @news.each do |f|%>
        <div class="col-sm-12 news-object">
            <div class="row">
                <div class="col-sm-10 title col-sm-offset-1">
                    <p><%= link_to f.title, news_path(f.id) %></p>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-10 description col-sm-offset-1">
                    <p><%= f.description.html_safe %></p>
                    <span>Posted by:</span> <%= get_user(f.user_id).alias %>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-10 options col-sm-offset-1">
                    <% if current_user.id === f.user_id %>
                        <%= render "news/indexEdit", :news => f %>
                    <% end %>
                </div>
            </div>
            <hr />
        </div>
    <% end %>
    <div id="news-index-scroller"></div>
</div>
<%= no_results(@news, "news reports").html_safe %>
<div class="row footer">
    <div class="col-sm-12">
        <p><%= link_to "Create new news", new_news_path %></p>
    </div>
</div>