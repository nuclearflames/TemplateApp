<div class="row">
    <div class="col-sm-12">
        <h4>Viewing news</h4>
    </div>
</div>
<div class="row">
    <div class="col-sm-10 title col-sm-offset-1">
        <p><%= link_to @news.title, news_path(@news.id) %></p>
    </div>
</div>
<div class="row">
    <div class="col-sm-10 description col-sm-offset-1">
        <p><%= @news.description.html_safe %></p>
        <p>Post by:</span> <%= get_user(@news.user_id).alias %></p>
    </div>
</div>
<div class="row">
    <div class="col-sm-10 options col-sm-offset-1">
        <% if current_user.id === @news.user_id %>
            <%= render "indexEdit", :news => @news %>
        <% end %>
    </div>
</div>