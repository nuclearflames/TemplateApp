<div class="row">
    <div class="span12">
        <h1>All of our posts</h1>
    </div>
</div>
<div class="row">
    <div class="span12">
        <div class="row">
            <div class="span6">
                <p>Title:</p>
            </div>
            <div class="span3">
                <p>Created by:</p>
            </div>
            <div class="span3">
                <p>Created at:</p>
            </div>
        </div>
    </div>
</div>
<% @posts.each do |f|%>
    <div class="row">
        <div class="span12 profile">
            <div class="row">
                <div class="span6">
                    <p><%= f.title %></p>
                    <p><%= f.description %></p>
                </div>
                <div class="span3">
                    <p><%= get_user(f.user_id).alias %></p>
                </div>
                <div class="span3">
                    <p><%= f.created_at %></p>
                </div>
            </div>
        </div>
    </div>
<% end %>
<div class="row">
    <div class="span12">
        <%= link_to "Create new post", new_post_path(params[:format]) %>
    </div>
</div>