<div class="row forumTitle">
    <div class="span12">
        <h1><%= get_topic(params[:id]).title %></h1>
        <p><%= get_topic(params[:id]).description %></p>
    </div>
</div>
<div class="row forum">
    <div class="span12">
        <div class="row">
            <div class="span2">
                <h3>Poster:</h3>
            </div>
            <div class="span10">
                <h3>Title:</h3>
            </div>
        </div>
    </div>
</div>
<% @posts.each do |f|%>
    <div class="row forum">
        <div class="span12">
            <div class="row">
                <div class="span2">
                    <span>Posted by <%= link_to get_user(f.user_id).alias, "/" + get_user(f.user_id).alias %> at <%= f.created_at %></span>
                </div>
                <div class="span10">
                    <h3><%= f.title %></h3>
                    <p><%= f.description %></p>
                </div>
            </div>
        </div>
    </div>
<% end %>
<div class="row">
    <div class="span12">
        <p><%= link_to "Create a new post", new_post_path(params[:id]) %></p>
    </div>
</div>