<div class="row">
    <div class="col-md-4">
        <% if @user === current_user %>
            <div class="row">
                <div class="col-md-12">
                    <div class="profile-options">
                        <h3>Profile options:</h3>
                        <p><%= link_to "Edit my profile", edit_user_registration_path %></p>
                        <hr />
                    </div>
                </div>
            </div>
        <% else %>
            <div class="row">
                <div class="col-md-12">
                    <div class="profile-options">
                        <h3>Profile options:</h3>
                        <p><%= link_to "Add friend", "friends/" + @user.alias %>
                        <hr />
                    </div>
                </div>
            </div>
        <% end %>
        <div class="row">
            <div class="col-md-12">
                <h2><%= @user.alias %></h2>
                <hr />
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <%= image_tag @user.avatar(:medium) %>
                <hr />
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <p>
                    <a>
                        <%= link_to "Send me a message", new_message_path(:alias => @user.alias) %>
                    </a>
                </p>
                <hr />
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <% if @user.photos.count > 0 %>
                    <div id="image-slider-profile">
                        <% @user.photos.each do |f|%>
                            <%= image_tag f.picture(:medium) %>
                        <% end %>
                    </div>
                    <hr />
                <% end %>
            </div>
        </div>
    </div>
    <div class="col-md-8">
        <div class="row">
            <div class="col-md-12">
                <p><%= @user.email %></p>
                <hr />
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <p><%= @user.aboutme %></p>
                <hr />
            </div>
        </div>
    </div>
</div>