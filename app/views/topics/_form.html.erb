<%= form_for @topic do |f| %>
    <%= f.hidden_field(:forum_id, :value => params[:id].to_i) %>
    <div class="row">
        <div class="col-md-6 title">
            <%= f.label :title %>
        </div>
        <div class="col-md-6 description">
            <%= f.label :description %>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 input">
            <%= f.text_field :title %>
        </div>
        <div class="col-md-6 description">
            <%= f.text_area :description %>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <%= f.submit :class => "flat-rounded-button" %>
        </div>
    </div>
<% end %>