<div class="row">
    <div class="span12">
        <%= form_for @topic do |f| %>
            <%= f.hidden_field(:forum_id, :value => params[:format].to_i) %>
            <div class="row">
                <div class="span6">
                    <%= f.label :title %>
                </div>
                <div class="span6">
                    <%= f.text_field :title %>
                </div>
            </div>
            <div class="row">
                <div class="span6">
                    <%= f.label :description %>
                </div>
                <div class="span6">
                    <%= f.text_field :description %>
                </div>
            </div>
            <div class="row">
                <div class="span12">
                    <%= f.submit %>
                </div>
            </div>
        <% end %>
    </div>
</div>